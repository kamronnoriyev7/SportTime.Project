<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ToDoListApp.ViewModels"
             xmlns:models="clr-namespace:ToDoListApp.Models"
             x:Class="ToDoListApp.Views.MainPage"
             x:DataType="viewModels:TaskViewModel"
             Title="ToDo List">

    <ContentPage.Resources>
        <Style TargetType="Frame" x:Key="TaskCard">
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"/>
        </Style>

        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <Style TargetType="Label" x:Key="DescriptionLabel">
            <Setter Property="FontSize" Value="Small"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"/>
        </Style>

        <Style TargetType="Label" x:Key="DueDateLabel">
            <Setter Property="FontSize" Value="Micro"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
        </Style>

        <!-- Bajarilgan vazifalar uchun DataTrigger -->
        <Style TargetType="Grid" x:Key="TaskItemBackgroundStyle">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
            <Style.Triggers>
                <DataTrigger TargetType="Grid" Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"/> <!-- Yashilroq fon -->
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Label" x:Key="CompletedTaskTitleStyle" BasedOn="{StaticResource TitleLabel}">
            <Style.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto">
        <CollectionView ItemsSource="{Binding Tasks}"
                        SelectionMode="None"
                        EmptyView="Ro'yxat bo'sh"
                        Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TaskModel">
                    <Frame Style="{StaticResource TaskCard}">
                        <Grid Style="{StaticResource TaskItemBackgroundStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox Grid.RowSpan="3"
                                      Grid.Column="0"
                                      IsChecked="{Binding IsCompleted}"
                                      VerticalOptions="Center"
                                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:TaskViewModel}}, Path=ToggleTaskCompletionCommand}"
                                      CommandParameter="{Binding .}"/>

                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Title}" Style="{StaticResource CompletedTaskTitleStyle}" Margin="5,0,0,0"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Description}" Style="{StaticResource DescriptionLabel}" Margin="5,2,0,0"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding DueDate, StringFormat='{0:dd MMM yyyy}'}" Style="{StaticResource DueDateLabel}" Margin="5,2,0,0"/>

                            <StackLayout Grid.RowSpan="3" Grid.Column="2" Orientation="Horizontal" VerticalOptions="Center">
                                <ImageButton Source="edit_icon.png"
                                             HeightRequest="24" WidthRequest="24" Margin="5"
                                             SemanticProperties.Hint="Tahrirlash"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:TaskViewModel}}, Path=GoToEditTaskPageCommand}"
                                             CommandParameter="{Binding .}"/>
                                <ImageButton Source="delete_icon.png"
                                             HeightRequest="24" WidthRequest="24" Margin="5"
                                             SemanticProperties.Hint="O'chirish"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:TaskViewModel}}, Path=DeleteTaskCommand}"
                                             CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1"
                Text="Yangi vazifa qo'shish"
                Command="{Binding GoToAddTaskPageCommand}"
                Margin="10"
                CornerRadius="20"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"/>
    </Grid>
</ContentPage>
