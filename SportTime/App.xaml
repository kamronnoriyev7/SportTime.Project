<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SportTime.Views"
    xmlns:converters="clr-namespace:SportTime.Converters"
    x:Class="SportTime.AppShell">

    <Shell.Resources>
        <ResourceDictionary>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:CompletedTasksCountConverter x:Key="CompletedTasksCountConverter" />
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Routing -->
    <Shell.Routes>
        <ShellRoute x:Name="AddEditTaskPage" 
                   Route="AddEditTaskPage" 
                   ContentTemplate="{DataTemplate views:AddEditTaskPage}" />
    </Shell.Routes>
</Shell>
