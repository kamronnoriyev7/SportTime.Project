<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportTime.Pages.HomePage"
             Title="🏋️ SportTime">

    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Sport turini tanlang:" FontSize="18"/>
        <Picker x:Name="SportTypePicker">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Fitness</x:String>
                    <x:String>Futbol</x:String>
                    <x:String>Basketbol</x:String>
                    <x:String>Yugurish</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Saralash bo‘yicha:" FontSize="18"/>
        <Picker x:Name="SortPicker">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Yaqinlik</x:String>
                    <x:String>Arzonlik</x:String>
                    <x:String>Reyting</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="📍 Lokatsiyani yuborish va qidirish"
                Clicked="OnSearchClicked" />
    </VerticalStackLayout>
</ContentPage>
