<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SportTime.Views.AddEditTaskPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SportTime.ViewModels"
             x:DataType="viewmodels:AddEditTaskViewModel"
             Title="{Binding PageTitle}">

    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            
            <!-- Sarlavha -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="True">
                <StackLayout Spacing="10">
                    <Label Text="Vazifa nomi *" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Entry Text="{Binding Title}"
                           Placeholder="Vazifa nomini kiriting..."
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </StackLayout>
            </Frame>

            <!-- Tavsif -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="True">
                <StackLayout Spacing="10">
                    <Label Text="Tavsif" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Editor Text="{Binding Description}"
                            Placeholder="Vazifa haqida batafsil ma'lumot..."
                            HeightRequest="100"
                            FontSize="14"
                            BackgroundColor="Transparent" />
                </StackLayout>
            </Frame>

            <!-- Muddat -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="Bajarish muddati" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <CheckBox IsChecked="{Binding HasDueDate}" 
                                  Color="{StaticResource Primary}" />
                        <Label Text="Muddat belgilash" 
                               VerticalOptions="Center"
                               FontSize="14" />
                    </StackLayout>
                    
                    <DatePicker Date="{Binding DueDate}"
                               IsVisible="{Binding HasDueDate}"
                               FontSize="16"
                               BackgroundColor="Transparent" />
                </StackLayout>
            </Frame>

            <!-- Saqlash va bekor qilish tugmalari -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="❌ Bekor qilish"
                        FontSize="16"
                        BackgroundColor="{StaticResource Gray500}"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding CancelCommand}" />
                
                <Button Grid.Column="1"
                        Text="{Binding SaveButtonText}"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Command="{Binding SaveCommand}" />
            </Grid>

            <!-- Yordam matni -->
            <Label Text="* Majburiy maydon"
                   FontSize="12"
                   TextColor="{StaticResource Gray500}"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>